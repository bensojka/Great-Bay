{
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "mocha": true
  },
  "globals": {
    "assert": false,
    "uncaught": true
  },
  "parserOptions": {
    "ecmaVersion": 6
  },
  "rules": {
    "no-empty": 0,
    "no-console": 2,
    "space-before-function-paren": 0,
    "spaced-comment": 2,
    "keyword-spacing": 2,
    "no-multi-spaces": 2,
    "one-var-declaration-per-line": 2,
    "no-trailing-spaces": 2,
    "eol-last": 2,
    "no-multiple-empty-lines": 2,
    "eqeqeq": 2,
    "space-in-parens": 2,
    "space-infix-ops": 2,
    "arrow-spacing": 2,
    "arrow-parens": [2, "as-needed"],
    "no-undef": 2,
    "no-eq-null": 2,
    "linebreak-style": 2,
    "no-unused-vars": 2,
    "strict": [
      2,
      "global"
    ],
    "key-spacing": [
      2,
      {
        "afterColon": true,
        "mode": "minimum"
      }
    ],
    "max-len": [
      2,
      140
    ],
    "valid-jsdoc": [
      1,
      {
        "requireParamDescription": false,
        "requireReturnDescription": false,
        "requireReturn": false
      }
    ]
  }
}
